{
  "name": "hanbi",
  "version": "0.3.1",
  "description": "A small javascript library for stubbing and spying on methods/functions.",
  "main": "./lib/main.js",
  "module": "./lib/esm/main.js",
  "exports": {
    "import": "./lib/esm/main.js",
    "default": "./lib/main.js"
  },
  "files": [
    "lib/!(test)"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build:esm": "esbuild --outdir=lib/esm --format=esm src/main.ts",
    "build": "tsc && npm run build:esm",
    "test": "mocha \"lib/test/**/*_test.js\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/hanbi.git"
  },
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/43081j/hanbi/issues"
  },
  "homepage": "https://github.com/43081j/hanbi#readme",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.2.0",
    "esbuild": "^0.7.21",
    "eslint": "^7.12.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^8.2.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}
